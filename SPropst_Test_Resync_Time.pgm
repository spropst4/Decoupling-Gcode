DVAR $hFile 
DVAR $timer
G71 
G76
G68 
RAMP RATE 1000
G1 F20

ENABLE X Y D

FILECLOSE

$hFile = FILEOPEN "COM2", 2
COMMINIT $hFile, "baud=115200 parity=N data=8 stop=1"
COMMSETTIMEOUT $hFile, -1, -1, 1000

FILEWRITE $hFile, "start"
G4 P0.0113

TIMER 0 CLEAR

REPEAT 15
'INSERT CODE BELOW 
G1 X30.0 
G1 Y1.0 
G1 X-30.0 
G1 Y1.0 
'INSERT CODE ^^
END REPEAT

FILEWRITE $hFile, TIMER(0, PERFORMANCE)
FILEWRITE $hFile, "end"

FILECLOSE $hFile

M02


